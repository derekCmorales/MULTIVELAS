# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
# For local development:
MONGODB_URI=mongodb://localhost:27017/multivelas

# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/multivelas?retryWrites=true&w=majority

# Security
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_very_secure_and_long_at_least_64_characters

# CORS (optional - defaults to allow all in development)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload (optional)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# Email Configuration (if implementing email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
